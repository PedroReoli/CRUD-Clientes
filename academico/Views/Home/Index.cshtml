@model IEnumerable<SeuProjeto.Models.Cliente>

<h2>Clientes</h2>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Endereço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefone</td>
                <td>@cliente.Endereco</td>
                <td>
                    <a href="/Home/Details/@cliente.Id">Detalhes</a> |
                    <a href="/Home/Edit/@cliente.Id">Editar</a> |
                    <a href="/Home/Delete/@cliente.Id">Excluir</a>



                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Home/Create">Adicionar Novo Cliente</a>
